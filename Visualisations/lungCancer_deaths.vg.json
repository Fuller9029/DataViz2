{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "view": {"stroke": ""}
  },
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Fuller9029/DataViz2/refs/heads/main/Data/IHME_Lung_Cancer_Deaths.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.year >= 2010 && datum.year <= 2020 && datum.metric_name == 'Number'"
    },
    {
      "calculate": "datum.val != null ? floor(datum.val / 300000) : 0",
      "as": "emoji_count"
    },
    {
      "calculate": "'🫁'",
      "as": "emoji_string"
    }
  ],
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "axis": {"title": "Year"}
    },
    "y": {
      "field": "location_name",
      "type": "nominal",
      "axis": {"title": "Location"}
    },
    "text": {
      "field": "emoji_string",
      "type": "nominal",
      "title": "Lung Cancer Deaths"
    },
    "size": {"value": 50},
    "color": {"value": "lightblue"}
  },
  "mark": {
    "type": "text",
    "baseline": "middle",
    "align": "center",
    "dx": 0
  },
  "title": {
    "text": "Lung Cancer Deaths (2010-2020)",
    "subtitle": "Each emoji represents 300,000 deaths",
    "fontSize": 15
  }
}
