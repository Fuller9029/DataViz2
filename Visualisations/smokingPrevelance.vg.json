{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "Smoking Prevalence (% of Adults)",
    "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": {
            "type": "topojson",
            "feature": "countries"
        }
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Fuller9029/DataViz2/refs/heads/main/Data/Percentage%20of%20people%20who%20smoke.csv",
                    "format": {
                        "type": "csv"
                    }
                },
                "key": "Country Name",
                "fields": ["2022", "2020", "2018", "2016", "2014", "2012", "2010", "2008"]
            }
        },
        {
            "calculate": "datum['2022'] == null ? 0 : datum['2022']",
            "as": "Prevalence"
        }
    ],
    "projection": {
        "type": "mercator"
    },
    "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
    },
    "encoding": {
        "color": {
            "field": "Prevalence",
            "type": "quantitative",
            "scale": {
                "scheme": "reds"
            },
            "title": "Smoking Prevalence (%)"
        },
        "tooltip": [
            {"field": "properties.name", "type": "nominal", "title": "Country"},
            {"field": "Prevalence", "type": "quantitative", "title": "Prevalence (%)"}
        ]
    }
}
